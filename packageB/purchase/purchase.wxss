.div1{
    display: flex;
    width: 750rpx;
    height: 200rpx;
    margin-top: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}


.address{
    display: flex;
    width: 730rpx;
    height: 200rpx;
    border-radius: 20rpx;
    background-color: #fafafa;
    overflow: hidden;
    margin-left: 10rpx;
    margin-right: 10rpx;
    box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}
.addressNull{
    display: flex;
    width: 730rpx;
    height: 200rpx;
    border-radius: 20rpx;
    background-color: #F8F8FF;
    overflow: hidden;
    margin-left: 10rpx;
    margin-right: 10rpx;
    box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
    align-items: center;
    justify-content: center;
}
.icon{
    display: flex;
    width: 70rpx;
    height: 70rpx;
    border-radius:20rpx;
    margin-left: 20rpx;
    margin-top: 60rpx;
    align-items: center;
    justify-content: center;
}
.addressinfo{
    display: flex;
    flex-direction: column;
    width: 80%;
    height: 90%;
    margin-top: 10rpx;
    margin-left: 20rpx;
    overflow: hidden;
    /* background-color: cyan; */
}
.name-tel{
    display: flex;
    width: 99%;
    height: 80rpx;
    /* background-color: rgb(135, 170, 222); */
}
.name{
    display: flex;
    align-items: center;
    width: 30%;
    height: 80rpx;
    /* background-color: rgb(22, 182, 102); */
}
.tel{
    display: flex;
    align-items: center;
    width: 50%;
    height: 80rpx;
    /* background-color: rgb(173, 13, 120); */
}
.detail{
    display: flex;
    align-items: center;
    width: 90%;
    height: 80rpx;
    /* background-color: rgb(124, 65, 16); */
}
.text-name{
    font-family:Sans-serif;
    font-size: 40rpx;
    font-weight:bold;
}
.text-tel{
    font-size: 33rpx;
}
.div2{
    display: flex;
    flex-direction: column;
    width: 730rpx;
    height: auto;
    background-color: #F8F8FF;
    border-radius: 20rpx;
    overflow: hidden;
    margin-top: 10rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}

.cart-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 150rpx;
    overflow: hidden;
    border-radius: 20rpx;
    line-height: 90rpx;
    box-sizing: border-box;
}

.cart-footer-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    overflow: hidden;
    border-radius: 20rpx;
    width: 100%;
    height: 100%;
    align-items: center;
    box-sizing: border-box;
    background-color: #fff;
}

.settlement-text {
    height: 100rpx;
    width: 200rpx;
    border-radius: 50rpx;
    margin-right: 30rpx;
    background-color: #f40;
    font-size: 35rpx;
    text-align: center;
    color: #fff;
}

.total-text {
    display: flex;
    height: 80%;
    width: 50%;
    font-size: 33rpx;
    margin-left: 20rpx;
    color: #333;
    overflow: hidden;
    text-align: center;
}
.cart-toatl-price {
    height: 80%;
    font-size: 50rpx;
    color: #f40;
}

