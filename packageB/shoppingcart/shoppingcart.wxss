.shoppingcard {
    display: flex;
    height: 200rpx;
    background-color: #F8F8FF;
    border-radius: 20rpx;
    overflow: hidden;
    margin-top: 10rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}

.card_icon {
    width: 60rpx;
    height: 60rpx;
    margin-left: 20rpx;
    margin-top: 60rpx;
    /* background-color: burlywood; */
}

.card_image {
    display: flex;
    left: 100rpx;
    width: 160rpx;
    height: 160rpx;
    margin-left: 30rpx;
    margin-top: 10rpx;
    border-radius: 10rpx;
    border-width: 5rpx;
    align-items: center;
    /*垂直居中 */
    justify-content: center;
    /* 水平居中 */
    background-color: rgb(161, 170, 170);
}

.shoppingInfo {
    display: flex;
    flex-direction: column;
    width: 420rpx;
    height: 90%;
    margin-top: 10rpx;
    margin-left: 20rpx;
    overflow: hidden;
    /* background-color: cyan; */
}

.card_title {
    width: 90%;
    height: 80rpx;
    /* background-color: rgb(135, 170, 222); */
}

.price_num {
    display: flex;
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    margin-top: 20rpx;
    /* background-color: darkmagenta; */
}

.card_price {
    width: 200rpx;
    height: 80rpx;
    margin-bottom: 0;
    /* background-color: rgb(17, 50, 99); */
}

.card_num {
    display: flex;
    width: 80rpx;
    height: 50rpx;
    margin-left: 120rpx;
    border-radius: 15rpx;
    border-width: 3rpx;
    border-style: solid;
    border-color: #888585;
    margin-bottom: 0;
    align-items: center;
    /*垂直居中 */
    justify-content: center;
    /* 水平居中 */
}


.cart-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 150rpx;
    line-height: 90rpx;
    box-sizing: border-box;
}

.cart-footer-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100%;
    align-items: center;
    box-sizing: border-box;
    background-color: #fff;
}

.settlement-text {
    border-radius: 85rpx;
    background-color: #f40;
    font-size: 35rpx;
    text-align: center;
    margin-left: 15rpx;
    margin-right: 15rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-right: 55rpx;
    padding-left: 55rpx;
    color: #fff;
}

.cart-toatl-price {
    height: 100%;
    font-size: 30rpx;
    color: #f40;
}

.total-text {
    height: 100%;
    font-size: 33rpx;
    color: #333;
}

.total-select {
    position: absolute;
    left: 20rpx;
    top: 45rpx;
    width: 60rpx;
    height: 60rpx;
}