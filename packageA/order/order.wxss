.card {
    display: flex;
    flex-direction: column;
    width: 730rpx;
    height: auto;
    background-color: #F8F8FF;
    border-radius: 20rpx;
    overflow: hidden;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}

.bottom {
    display: flex;
    height: 100rpx;
    width: 730rpx;
    background-color: #fafafa;
}

.bottom-button {
    display: flex;
    height: 80rpx;
    width: 200rpx;
    border-radius: 15rpx;
    margin-top: 10rpx;
    margin-left: 30rpx;
    align-items: center;
    justify-content: center;
    border: 1rpx solid #ec5b07;
}

.button-text {
    height: 100%;
    font-size: 33rpx;
    color: #333;
}