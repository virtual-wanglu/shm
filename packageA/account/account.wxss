/* packageA/account/account.wxss */
.accont{
    display: flex;
    width: 730rpx;
    height: 300rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    border-radius: 20rpx;
    align-items: center;
    justify-content: center;
    background-color: rgb(10, 184, 10)
}
.total-text {
    font-size: 45rpx;
    color: #333;
}
.total-num {
    font-size: 60rpx;
    color: rgb(184, 25, 25);
}

.recharge{
    display: flex;
    flex-direction: column;
    width: 730rpx;
    height: 400rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    overflow: hidden;
    background-color: #F8F8FF;
    box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}
.recharge-title{
    display: flex;
    width: 730rpx;
    height: 100rpx;
    align-items: center;
    justify-content: center;
}
.recharge-text{
    font-size: 37rpx;
    color: #333;
}
.recharge-button{
    width: 730rpx;
    height: 300rpx;
}
.bill{
    
    width: 730rpx;
    height: 600rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    background-color: #F8F8FF;
}

.bill-title{
    display: flex;
    width: 730rpx;
    height: 100rpx;
    align-items: center;
    justify-content: center;
}
.bill-text{
    font-size: 37rpx;
    color: #333;
}